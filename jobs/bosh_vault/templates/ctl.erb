#!/bin/bash

RUN_DIR=/var/vcap/sys/run/bosh_vault
LOG_DIR=/var/vcap/sys/log/bosh_vault
PIDFILE=${RUN_DIR}/pid

case $1 in

start)
mkdir -p $RUN_DIR $LOG_DIR
chown -R vcap:vcap $RUN_DIR $LOG_DIR

echo $$ > $PIDFILE

cd /var/vcap/packages/bosh_vault

exec /var/vcap/packages/bosh_vault/bin/bosh_vault -config /var/vcap/jobs/bosh_vault/config/bosh_vault.yml \
>>  $LOG_DIR/bosh_vault.stdout.log \
2>> $LOG_DIR/bosh_vault.stderr.log

;;

stop)
kill -9 `cat $PIDFILE`
rm -f $PIDFILE

;;

*)
echo "Usage: ctl {start|stop}" ;;

esac
